<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Best Booking</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BestBooking.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Modal.css" asp-append-version="true" />
</head>
<div class="DivBackground-color">
    <body>
        <header>
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light box-shadow mb-3">
                <div class="container-fluid">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Best Booking</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link text-dark dropdown-toggle" data-bs-toggle="dropdown" role="button" aria-expanded="false">Tropical</a>
                                <ul class="dropdown-menu dropdown-menu-tropical">
                                  <li><a class="dropdown-item" asp-controller="Tropical" asp-action="TropicalIndex">View All</a></li>
                                  <li><hr class="dropdown-divider"></li>
                                  <li><a class="dropdown-item dropdown-item-tropical" asp-controller="Tropical" asp-action="Aruba">Aruba</a></li>
                                  <li><a class="dropdown-item dropdown-item-tropical" asp-controller="Tropical" asp-action="Bahamas">Bahamas</a></li>
                                  <li><a class="dropdown-item dropdown-item-tropical" asp-controller="Tropical" asp-action="Bermuda">Bermuda</a></li>
                                  <li><a class="dropdown-item dropdown-item-tropical" asp-controller="Tropical" asp-action="Jamaica">Jamaica</a></li>
                                </ul>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link text-dark dropdown-toggle" data-bs-toggle="dropdown" role="button" aria-expanded="false">Winter</a>
                                <ul class="dropdown-menu dropdown-menu-winter">
                                  <li><a class="dropdown-item dropdown-item-winter" asp-controller="Winter" asp-action="WinterIndex">View All</a></li>
                                  <li><hr class="dropdown-divider"></li>
                                  <li><a class="dropdown-item dropdown-item-winter" asp-controller="Winter" asp-action="Alaska">Alaska</a></li>
                                  <li><a class="dropdown-item dropdown-item-winter" asp-controller="Winter" asp-action="Aspen">Aspen</a></li>
                                  <li><a class="dropdown-item dropdown-item-winter" asp-controller="Winter" asp-action="Colorado">Colorado</a></li>
                                  <li><a class="dropdown-item dropdown-item-winter" asp-controller="Winter" asp-action="Vermont">Vermont</a></li>
                                </ul>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link text-dark dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-expanded="false">Night Life</a>
                                <ul class="dropdown-menu">
                                  <li><a class="dropdown-item" asp-controller="NightLife" asp-action="NightLifeIndex">View All</a></li>
                                  <li><a class="dropdown-item" href="#">Another action</a></li>
                                  <li><a class="dropdown-item" href="#">Something else here</a></li>
                                  <li><hr class="dropdown-divider"></li>
                                  <li><a class="dropdown-item" href="#">Separated link</a></li>
                                </ul>
                            </li>
                            
                            <li class="nav-item">
                                <a class="nav-link text-dark mouse-pointer" asp-controller="Home" data-bs-toggle="modal" data-bs-target="#SubmitUserInformation">Contact Us!</a>
                            </li>
                            <li class="nav-item move-to-end">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Project Information</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </header>
        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>

        <footer class="border-top footer text-muted">
            <div class="container">
                <p><strong>Jordan Mendes </strong>&nbsp; 2022 - BestBooking - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a></p>
            </div>
        </footer>
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        @await RenderSectionAsync("Scripts", required: false)

@await Html.PartialAsync("SubmitUserInformation")

    </body>
</div>

@section Scripts
{
        @await Html.PartialAsync("_ValidationScriptsPartial")
}

</html>
